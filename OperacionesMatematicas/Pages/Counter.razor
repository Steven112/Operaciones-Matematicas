@page "/counter"

<h1>Counter</h1>

<p>Suma: @suma</p>

<input  type="number" @bind="suma"/>
<button class="btn btn-primary" @onclick="TotalSuma">Click me</button>

<InputNumber @bind-Value="s1"></InputNumber>

@code {
   

    private int s1, s2;
    private int suma = 0;

    private void TotalSuma()
    {
        suma = s1 + s2;
    }

}
